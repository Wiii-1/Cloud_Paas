{
    "version": 2,
    "builds":[
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "api/submit.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "api/submit",
            "methods": ["POST"],
            "dest": "api/submit.js"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
}