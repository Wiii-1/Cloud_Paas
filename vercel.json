{
    "version": 2,
    "builds": [
      {
        "src": "api/submit.py",
        "use": "@vercel/python"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "api/main.py",
        "use": "@vercel/python",
        "config": {
          "maxDuration": 30,
          "runtime": "python3.9"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "api/submit.py"
      },
      {
        "src": "/(.*)",
        "dest": "/public/$1"
      }
    ]
  }